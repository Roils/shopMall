<!-- 轮播图 -->
<view class="detail_swiper">
    <swiper class="" autoplay circular indicator-dots>
        <swiper-item bindtap="viewimg" wx:for="{{goodsObj.pics}}" wx:key="pics_id" class="" item-id="" data-url="{{ item.pics_mid }}">
            <image mode="widthFix" src="{{ item.pics_mid}}" />
        </swiper-item>
    </swiper>
</view>
<!-- 商品价格 -->
<view class="goods_price">
    ￥{{ goodsObj.goods_price}}
</view>
<!-- 商品名称与收藏 -->
<view class="goods_name_row">
    <view class="goods_name">
        {{goodsObj.goods_name}}
    </view>
    <view class="goods_collect">
        <text class="iconfont iconfavor">
            
        </text>
        <view class="collect_text">
            收藏
        </view>
    </view>
</view>
<!-- 图文详情 -->
<view class="goods_info">
    <view class="goods_info_title">
        图文详情
    </view>
    <view class="goods_info_content">
        <rich-text class="" nodes="{{goodsObj.goods_introduce}}">
            
        </rich-text>
          
    </view>
</view>