/* pages/category/category.wxss */
page {
  height: 100%;
}
.cate {
  height: 100%;
}
.cate .cate_container {
  height: calc( 100vh - 90rpx );
  display: flex;
}
.cate .cate_container .l_menu {
  flex: 2;
}
.cate .cate_container .l_menu .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.cate .cate_container .l_menu .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.cate .cate_container .r_menu {
  flex: 5;
}
.cate .cate_container .r_menu .goods_item .goods_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cate .cate_container .r_menu .goods_item .goods_title .separate {
  color: #ccc;
  padding: 0 10rpx;
}
.cate .cate_container .r_menu .goods_item .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.cate .cate_container .r_menu .goods_item .goods_list .goods_nav {
  width: 33.33%;
  text-align: center;
}
.cate .cate_container .r_menu .goods_item .goods_list .goods_nav image {
  width: 50%;
}
.cate .cate_container .r_menu .goods_item .goods_list .goods_nav .goods_name {
  font-size: 20rpx;
  color: #bbb;
}
